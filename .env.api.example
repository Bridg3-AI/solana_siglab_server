# =============================================================================
# LLM-Lite Underwriter API Configuration
# =============================================================================

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_TITLE="LLM-Lite Underwriter API"
API_DESCRIPTION="파라메트릭 보험 자동 인수심사 API"
API_VERSION="1.0.0"

# CORS Configuration
API_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"
API_CORS_CREDENTIALS=true
API_CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"

# Security Configuration
API_KEY_HEADER="X-API-Key"
API_VALID_KEYS=""  # Comma-separated list of valid API keys (empty = no auth)
API_RATE_LIMIT=60  # Requests per minute per IP

# Task Management
API_MAX_CONCURRENT_TASKS=10
API_TASK_TIMEOUT=600  # 10 minutes
API_TASK_CLEANUP_INTERVAL=24  # hours

# Redis Configuration (Optional - for distributed deployments)
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""
# REDIS_DB=0

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_BACKOFF_MULTIPLIER=2.0
WEBHOOK_MAX_PAYLOAD_SIZE=10000000  # 10MB

# File System Configuration
API_RESULTS_DIR="./api_results"
API_LOGS_DIR="./api_logs"

# Monitoring Configuration
API_ENABLE_METRICS=true
API_METRICS_PORT=9090
API_HEALTH_CHECK_INTERVAL=30

# UnderwriterAgent Default Settings
UNDERWRITER_DEFAULT_SIMULATION_YEARS=1000
UNDERWRITER_DEFAULT_MARKET_RISK_PREMIUM=0.15
UNDERWRITER_ENABLE_AUDIT_TRAIL=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH="./api_logs/api.log"
LOG_FILE_MAX_SIZE_MB=100
LOG_FILE_BACKUP_COUNT=5
LOG_INCLUDE_REQUEST_ID=true
LOG_INCLUDE_USER_AGENT=true
LOG_INCLUDE_IP=true

# =============================================================================
# Dependencies (from existing system)
# =============================================================================

# OpenAI API Configuration (Required)
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL_NAME="gpt-4"
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=60

# External Data APIs (Optional)
WEATHER_API_KEY=""
FLIGHT_API_KEY=""
CRYPTO_API_KEY=""