# =============================================================================
# Google Cloud Run 환경 변수 템플릿
# =============================================================================
# 이 파일을 복사하여 실제 값으로 설정한 후 Cloud Run 배포 시 사용하세요.
# gcloud run deploy 명령 시 --env-vars-file 옵션으로 사용 가능합니다.

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=false
API_TITLE="LLM-Lite Underwriter API"
API_DESCRIPTION="파라메트릭 보험 자동 인수심사 API"
API_VERSION="1.0.0"

# CORS 설정 (프로덕션 도메인으로 변경)
API_CORS_ORIGINS="https://your-frontend-domain.com,https://your-admin-panel.com"
API_CORS_CREDENTIALS=true

# 작업 관리 설정
API_MAX_CONCURRENT_TASKS=5
API_TASK_TIMEOUT=300
API_TASK_CLEANUP_INTERVAL=12

# Webhook 설정
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3
WEBHOOK_BACKOFF_MULTIPLIER=2.0
WEBHOOK_MAX_PAYLOAD_SIZE=5000000

# 파일 시스템 설정
API_RESULTS_DIR=/tmp/api_results
API_LOGS_DIR=/tmp/api_logs
API_NOTIFICATION_FILE_DIR=/tmp/api_notifications

# 모니터링 설정
API_ENABLE_METRICS=true
API_METRICS_PORT=9090
API_HEALTH_CHECK_INTERVAL=30

# UnderwriterAgent 기본 설정
UNDERWRITER_DEFAULT_SIMULATION_YEARS=1000
UNDERWRITER_DEFAULT_MARKET_RISK_PREMIUM=0.15
UNDERWRITER_ENABLE_AUDIT_TRAIL=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_INCLUDE_REQUEST_ID=true
LOG_INCLUDE_USER_AGENT=true
LOG_INCLUDE_IP=true

# OpenAI API 설정 (실제 키로 교체 필요)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=8192

# LangChain 설정
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=llm-lite-underwriter

# 보안 설정 (선택사항)
# API_VALID_KEYS=key1,key2,key3
# API_RATE_LIMIT=100

# Redis 설정 (선택사항 - 외부 Redis 사용 시)
# REDIS_URL=redis://your-redis-instance:6379
# REDIS_PASSWORD=your-redis-password
# REDIS_DB=0

# Firebase 설정 (선택사항)
# GOOGLE_CLOUD_PROJECT=your-project-id
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com